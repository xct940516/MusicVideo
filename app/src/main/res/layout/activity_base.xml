<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@mipmap/base_titlebar_bg">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="45dip"
            android:layout_gravity="center_vertical"
            android:layout_height="45dip"
            android:background="@drawable/left_button_selector" />

        <TextView
            android:id="@+id/tv_titile"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="功能列表"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_right"
            android:layout_width="45dip"
            android:layout_gravity="right"
            android:layout_marginTop="8dip"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:background="@drawable/right_button_selector" />
    </FrameLayout>
    <!-- 加载子类的 -->
    <LinearLayout
        android:id="@+id/ll_child_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>


</LinearLayout>
