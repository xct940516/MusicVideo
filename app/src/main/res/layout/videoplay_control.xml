<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@mipmap/bg_player_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_play_titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:text="我是标题"
                android:textColor="#ffffff"
                android:textSize="18dip" />


            <ImageView
                android:id="@+id/iv_battary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:src="@mipmap/ic_battery_0" />

            <TextView
                android:id="@+id/tv_system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:text="我是时间"
                android:textColor="#ffffff"
                android:textSize="18dip" />


        </LinearLayout>

        <LinearLayout
            android:background="@mipmap/bg_player_top_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_voice"
                android:background="@drawable/btn_voice_selector"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekbar_voice"
                android:thumb="@mipmap/progress_dot_normal"
                android:maxHeight="6dip"
                android:maxWidth="6dip"
                android:layout_gravity="center_vertical"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--android:progressDrawable="@drawable/progress_horizontal"-->
            <Button
                android:id="@+id/btn_play_switch"
                android:background="@drawable/btn_screen_selector"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@mipmap/bg_player_bottom_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="当前时间"
                android:textColor="#ffffff"
                android:textSize="18dip" />

            <SeekBar
                android:id="@+id/seekbar_play_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:maxHeight="6dip"
                android:maxWidth="6dip"
                android:thumb="@mipmap/progress_dot_normal" />

            <TextView
                android:id="@+id/tv_totle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:text="总时间"
                android:textColor="#ffffff"
                android:textSize="18dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@mipmap/bg_player_bottom_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_play_exit"
                android:layout_weight="1"
                android:background="@drawable/btn_play_exit_selector"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_play_pre"
                android:layout_weight="1"
                android:background="@drawable/btn_play_pre_selector"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_play_pause"
                android:layout_weight="1"
                android:background="@drawable/btn_play_pause_selector"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_play_next"
                android:layout_weight="1"
                android:background="@drawable/btn_play_next_selector"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_play_full"
                android:layout_weight="1"
                android:background="@drawable/btn_play_scueenfull_selector"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>